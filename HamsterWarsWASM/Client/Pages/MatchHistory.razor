@page "/history"
@inject IMatchService MatchService



@if(MatchService.Matches == null || MatchService.Matches.Count == 0)
{
    <span>Loading all matches...</span>
}
else
{
    <button class="btn btn-primary">Click here to remove all matches</button>
    <ul class="list-unstyled">
        @foreach (var match in MatchService.Matches)
        {
            <li class="media my-3">
                <div class="media-img-wrapper mr-2">
                        <p>Match Id: @match.Id</p>
                        <p>Winner Id: @match.WinnerId</p>
                        <p>Loser Id: @match.LoserId</p>
                    <div class="btn btn-danger">Remove</div>
                </div>
            </li>
        }
    </ul>
}

@code {
    protected override async Task OnInitializedAsync()
    {
        await MatchService.GetMatches();
    }
}
